<% layout("/layouts/boilerplate") -%>
<div class="row">
    <div class="col-8 offset-2">
        <h2 class="mb-3 mt-3">Listing details:</h2>
    <div class="card list-card" >
    <img src="<%=list.image%>" class="card-img-top list-img mb-3 detail-img" alt="..." >
    <div class="card-body">
    <h5 class="card-title" style="text-decoration: underline;"><%=list.title%></h5>
    <p class="card-text"><%=list.description%> <br>
        <b>Price:</b>&#8377;<%=list.price.toLocaleString("en-IN")%> <br>
        <b>Location:</b> <%=list.location%> <br>
        <b>Country: </b><%=list.country%>
    </p>
  </div>
    </div>
    <div class="btns mb-3">
    <form action="/listing/<%=list.id%>/edit" method="get">
        <button class="btn  btn-dark eu-btn btns">Update</button>
    </form>
    <form action="/listing/<%=list._id%>?_method=DELETE" method="post">
        <button class="btn btn-dark eu-btn btns ">Delete</button>
    </form>
        </div>
    </div>
    <div class="col-8 offset-2">
    <div mb-3>
        <hr>
        <h4>Add a review</h4>
        <form action="/listing/<%=list.id%>/review" method="post" class="needs-validation" novalidate>
            <div mb-3>
                <label for="review[rating]" class="form-label">Rating :</label>
                <output for="customRange4" id="rangeValue" aria-hidden="true"></output>
                <input type="range" class="form-range" min="1" max="5" value="5" id="customRange4" name="review[rating]">
                
            </div>
            <div class="mb-3 ">
                <label for="comment" >Comment :</label>
                <textarea name="review[comment]" id="comment" class="form-control" required></textarea>
                <div class="invalid-feedback">Add a comment</div>
            </div>
            <div class="mb-3">
                <button class="btn btn-dark ">Submit</button>
            </div>
        </form>
    </div>
    <hr>
    <div>
    <h3>All reviews:</h3>
            <div class="row">
                <% for(review of list.reviews){ %>
                    <div class="col-6">
                        <div class="card review-card mb-3 ms-2 p-3 pb-0" >
                    <div class="card-body mb-4  ">
                        <p class="card-text"><%=review.comment%> : <%=review.rating%></p>
                    </div>
                    <form action="/listing/<%=list.id%>/review/<%=review.id%>?_method=DELETE" method="post" class="mb-3">
                        <button class="btn sm review-btn ">Delete</button>
                    </form>
                    </div>
                    </div> 
                    
            <%}%>
            </div>
            
        </div>
    </div>
</div>





    


